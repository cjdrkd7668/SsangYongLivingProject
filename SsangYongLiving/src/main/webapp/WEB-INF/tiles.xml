<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configureation 2.1//EN" "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>
	
	<!-- 홈 화면 템플릿 시작 -->
	<definition name="index" template="/WEB-INF/views/layout/main.jsp">
		<put-attribute name="asset" value="/WEB-INF/views/inc/asset.jsp"></put-attribute>
		<put-attribute name="header" value="/WEB-INF/views/inc/header.jsp"></put-attribute>
		<put-attribute name="footer" value="/WEB-INF/views/inc/footer.jsp"></put-attribute>
		<put-attribute name="content" value="/WEB-INF/views/index.jsp"></put-attribute>
	</definition>
	<!-- 홈 화면 템플릿 끝 -->
	
	<!-- recipe 템플릿 시작 -->
	<definition name="recipe.*" template="/WEB-INF/views/layout/recipemain.jsp">
		<put-attribute name="recipeasset" value="/WEB-INF/views/inc/recipeasset.jsp"></put-attribute>
		<put-attribute name="header" value="/WEB-INF/views/inc/header.jsp"></put-attribute>
		<put-attribute name="footer" value="/WEB-INF/views/inc/footer.jsp"></put-attribute>
		<put-attribute name="content" value="/WEB-INF/views/recipe/{1}.jsp"></put-attribute>
	</definition>
	<!-- recipe 템플릿 시작 -->
	

	
	<!-- 알바찾기 -->
	<definition name="job.*" template="/WEB-INF/views/layout/jobmain.jsp">
		<put-attribute name="asset" value="/WEB-INF/views/inc/jobasset.jsp"></put-attribute>
		<put-attribute name="header" value="/WEB-INF/views/inc/header.jsp"></put-attribute>
		<put-attribute name="content" value="/WEB-INF/views/job/{1}.jsp"></put-attribute>
		<put-attribute name="footer" value="/WEB-INF/views/inc/footer.jsp"></put-attribute>
	</definition>

	<!-- group 템플릿 시작  -->
	<definition name="group.*" template="/WEB-INF/views/layout/groupmain.jsp">
		<put-attribute name="globalasset" value="/WEB-INF/views/inc/asset.jsp"></put-attribute>
		<put-attribute name="asset" value="/WEB-INF/views/inc/groupasset.jsp"></put-attribute>
		<put-attribute name="globalheader" value="/WEB-INF/views/inc/header.jsp"></put-attribute>
		<put-attribute name="header" value="/WEB-INF/views/inc/groupheader.jsp"></put-attribute>
		<put-attribute name="content" value="/WEB-INF/views/group/{1}.jsp"></put-attribute>
		<put-attribute name="globalfooter" value="/WEB-INF/views/inc/footer.jsp"></put-attribute>
	</definition>
	<!-- group 템플릿 끝 -->
	
	<!-- used 중고거래 시작 -->
	<definition  name="used.*" template="/WEB-INF/views/layout/usedmain.jsp" >
		<put-attribute name="usedasset" value="/WEB-INF/views/inc/usedasset.jsp"></put-attribute>
		<put-attribute name="header" value="/WEB-INF/views/inc/header.jsp"></put-attribute>
		<put-attribute name="sidebar" value="/WEB-INF/views/inc/usedsidebar.jsp"></put-attribute>
		<put-attribute name="content" value="/WEB-INF/views/used/{1}.jsp"></put-attribute>
		<put-attribute name="footer" value="/WEB-INF/views/inc/footer.jsp"></put-attribute>
	
	</definition>	
	<!-- used 중고거래 끝 -->

	
</tiles-definitions>













